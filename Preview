    <div align="center" style="margin-top:20px">
        <button id="SA">Show Custom Alert</button>
        <button id="SP">Show Custom Prompt</button>
        <button id="SC">Show Custom Confirm</button>
    </div>
	<script type="text/javascript" src="jquery-1.11.3.min.js"></script> 
    <script type="text/javascript" src="BoxProject.js"></script> 
    <script type="text/javascript">
	var Bp=new BoxProject();
	Bp.init();
	$('#SP').click(function(){
		Bp.showPrompt('Error Showing Results','Try reloading the page and if the error continues <br/>please notify us',
			function(a){
				console.log(a)
			}
		);
	})
	$('#SA').click(function(){
		Bp.showAlert('Error Showing Results','Try reloading the page and if the error continues <br/>please notify us');
	})
	$('#SC').click(function(){
		Bp.showConfirm('Error Showing Results','Try reloading the page and if the error continues <br/>please notify us',
			function(){
				console.log("k")
			}
		);
	})
	</script>
